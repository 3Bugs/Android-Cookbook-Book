<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <Button
            android:id="@+id/draw_circle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="วาดวงกลม" />

        <Button
            android:id="@+id/draw_rect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="วาดสี่เหลี่ยม" />

        <Button
            android:id="@+id/clear_screen_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ลบหน้าจอ" />
    </LinearLayout>

    <com.example.canvasdrawwithotherviews.MyView
        android:id="@+id/drawing_surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>